<!doctype html>
<html lang="en">
<head>
    <link href="./stylesheets/thankyou.css" rel="stylesheet" type="text/css">
    <meta charset="UTF-8">
    <title>Thank You</title>
</head>
<body>
<div class="thankyou-container">
    <h1>Thank You!</h1>
</div>
<div class="thankyou-message-container">
    <p id="message">Someone from our team will get back to you soon. Check your email for updates.</p>
</div>
<div class="thankyou-trouble-container">
    <p>Having Trouble?&nbsp;<a id="trouble-link" href="#">Contact Us</a></p>
</div>
<div class="thankyou-continue-container">
    <button id="continue-button">Continue</button>
</div>
<script>
    const noRedirectPages = ['/thankyou', '/404', '/500'];
    document.getElementById('continue-button').addEventListener('click', () => {
        const lastPage = document.referrer;
        let flag = false;

        for (const page in noRedirectPages) {
            if (lastPage.substring(lastPage.lastIndexOf('/')) === page) {
                flag = true;
            }
        }
        if (flag) {
            window.location.replace('/');
        } else {
            window.location.replace(document.referrer);
        }
    });
</script>
</body>
</html>
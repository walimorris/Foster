<div class="locations-form-container">
    <section id="locations-info-section">
        <p class="locations-text-format">Our Locations Map allows you to choose city and state to locate foster
            centers in your chosen area. You can also allow our system to locate your coordinates and do the work for you.
        </p>
        <div class="locate-me-container">
            <button id="locate-me-button">Locate</button>
            <p id="locate-me-error-msg"></p>
        </div>
    </section>
    <div class="locations-form-border"></div>
    <section id="locations-form-section">
        <form id="locations-form">
            <label class="locations-text-format" id="locations-state_label" for="states">Choose a state:</label>
            <select class="locations-select-dropdown" id="states" name="states"></select><br/>
            <label class="locations-text-format" id="locations-city-label" for="city">Choose a city :</label>
            <select class="locations-select-dropdown" id="city" name="city"></select>
        </form>
    </section>
</div>
<div id="locations-map"></div>
